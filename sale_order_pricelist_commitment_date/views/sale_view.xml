<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_with_carrier" model="ir.ui.view">
        <field name="name">delivery.sale.order.form.view.with_carrier</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        <xpath
            expr="//field[@name='order_line']/form/group/group/field[@name='product_id']"
               position="attributes">
            <attribute name="context">{'commitment_date': parent.commitment_date}</attribute>
        </xpath>
        <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
               position="attributes">
            <attribute name="context">{'commitment_date': parent.commitment_date}</attribute>
        </xpath>
        </field>
    </record>
</odoo>
